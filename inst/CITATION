citHeader("To cite rgeoprofile in publications use:")

citEntry(entry = "Manual",
  title        = "rgeoprofile: Geographic Profiling Methods for Serial Crime Analysis",
  author       = "Jamie Spaulding and Keith Morris",
  year         = "2019",
  note         = "R package version 0.1.0",
  url          = "https://github.com/JSSpaulding/rgeoprofile",

  textVersion  =
  paste("Jamie Spaulding, Keith Morris (2019).",
        "rgeoprofile: Geographic Profiling Methods for Serial Crime Analysis",
        "R package version 0.1.0.",
        "URL https://github.com/JSSpaulding/rcrimeanalysis.")
)
